<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Madra.Userprofile">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="AUto" />
            </Grid.ColumnDefinitions>

            <Label Text="Back" 
               HorizontalOptions="Center"
               Grid.Row="0" Grid.Column="0"
                   x:Name="back"/>

            <Label Text="Home" 
               HorizontalOptions="Center"
               Grid.Row="0" Grid.Column="3"
               x:Name="home"/>

            <Label Text="SETTINGS" 
               HorizontalOptions="Center"
               Grid.Row="1" Grid.Column="1"             
               Grid.ColumnSpan="2"/>

            <Entry Placeholder="First Name"
                   Grid.Row="2" Grid.Column="1"
                   Grid.ColumnSpan="2"
                   x:Name="fName"/>
            <Entry Placeholder="Last Name"
                   Grid.Row="3" Grid.Column="1"
                   Grid.ColumnSpan="2"
                   x:Name="lName"/>
            <DatePicker DateSelected="newdate"
                        x:Name="dob"
                        Grid.Row="4" Grid.Column="1"
                        Grid.ColumnSpan="2"/>
            <Entry Placeholder="Phone Number"
                   Grid.Row="5" Grid.Column="1"
                   Grid.ColumnSpan="2"
                   MaxLength="10"
                   x:Name="phoneNumber"/>
            <!--<Entry Placeholder="Password"
                   Grid.Row="6" Grid.Column="1"
                   Grid.ColumnSpan="2"
                   IsPassword="True"
                   x:Name="password"/>
            <Entry Placeholder="Confirm Password"
                   Grid.Row="7" Grid.Column="1"
                   Grid.ColumnSpan="2"
                   IsPassword="True"
                   x:Name="confirmPassword"/>-->

            <Button Text="Update"
                    Grid.Row="9" Grid.Column="1"
                    Grid.ColumnSpan="2"
                    TextColor="#FFFFFF"
                    BackgroundColor="#3D75AB"
                    Clicked="updateButton"/>
                        
            <Button Text="My Bookings"
                    Grid.Row="10" Grid.Column="1"
                    Grid.ColumnSpan="2"
                    TextColor="#FFFFFF"
                    BackgroundColor="#3D75AB"
                    Clicked="bookingsButton"/>

            <Button Text="Log out"
                    Grid.Row="11" Grid.Column="1"
                    Grid.ColumnSpan="2"
                    TextColor="#FFFFFF"
                    BackgroundColor="#3D75AB"
                    Clicked="logoutButton"/>

            <Label Text="Help" 
                   HorizontalOptions="Center"
                   TextColor="#FFFFFF"
                   Grid.Row="12" Grid.Column="3" />

            <Button Text="Delete Account" 
                    TextColor="#FFFFFF"
                    BackgroundColor="#3D75AB"
                    Grid.Row="13" Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Clicked="deleteButton"/>

        </Grid>
    </ScrollView>
</ContentPage>