<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Madra.MarkupExtensions"
             x:Class="Madra.HomePage"
             BackgroundColor="#24527B">
    <ScrollView>
    <StackLayout>
            <ImageButton Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   BackgroundColor="#24527B"
                   Source="{local:EmbeddedImage Madra.Images.logo2.jpg}"
                         Clicked="logoButton"/>

            <!--<ImageButton Grid.Row="1" Grid.Column="0"
                    BackgroundColor="#24527B"
                    Source="{local:EmbeddedImage Madra.Images.Adopt.jpg}"
                    Clicked="adoptButton"/>-->
        <Button Text="Profile"                    
                Clicked="userProfileButton"
                HorizontalOptions="End"
                BackgroundColor="#24527B"
                TextColor="White"/>
        <Button Text ="Walking" Clicked="bookButton"
                HorizontalOptions="Center"
                CornerRadius="50"/>
        <Button Text ="Donate"
                Clicked="donateButton"
                HorizontalOptions="Center"
                CornerRadius="50"/>
        <Button Text ="Events"
                Clicked="eventsButton"
                HorizontalOptions="Center"
                CornerRadius="50"/>
        
        <Button HorizontalOptions="Center"
                Text="Create Account"
                Clicked="createProfileButton"
                x:Name="createProfile"/>
        <Grid>
            <ImageButton Grid.Row="1" Grid.Column="0"
                         BackgroundColor="#24527B"
                         Source="{local:EmbeddedImage Madra.Images.facebook.png}"
                         Clicked="facebookClicked"/>
            <ImageButton Grid.Row="1" Grid.Column="1"
                         BackgroundColor="#24527B"
                         Source="{local:EmbeddedImage Madra.Images.twitter.png}"
                         Clicked="twitterClicked"/>
            <ImageButton Grid.Row="1" Grid.Column="2"
                         BackgroundColor="#24527B"
                         Source="{local:EmbeddedImage Madra.Images.youtube.png}"
                         Clicked="youtubeClicked"/>
            <ImageButton Grid.Row="1" Grid.Column="3"
                         BackgroundColor="#24527B"
                         Source="{local:EmbeddedImage Madra.Images.instagram.png}"
                         Clicked="instagramClicked"/>
        </Grid>
        
    </StackLayout>
    </ScrollView>
</ContentPage>
